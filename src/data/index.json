{
  "form": {
    "title": "User Registration",
    "layout": {
      "type": "grid",
      "columns": 3
    },
    "form_data": [
      {
        "id": 1,
        "fields": [
          {
            "key": "full_name",
            "type": "text",
            "label": "Full Name",
            "name": "name",
            "placeholder": "Enter your full name",
            "required": true,
            "layout": { "colSpan": 3 }
          }
        ]
      },
      {
        "id": 2,
        "fields": [
          {
            "key": "birth_date",
            "type": "datepicker",
            "name": "birth",
            "label": "Birth Date",
            "required": true,
            "layout": { "colSpan": 1 }
          }
        ]
      },
      {
        "id": 3,
        "fields": [
          {
            "key": "region",
            "type": "select",
            "label": "Region",
            "name": "region",
            "placeholder": "Select region",
            "childIncluded": true,
            "childLabel": "District",
            "childPlaceholder": "Select district",
            "childName": "district",
            "layout": { "colSpan": 1 },
            "options": [
              {
                "id": 1,
                "label": "Tashkent",
                "value": "tashkent",
                "options": [
                  {
                    "id": 1,
                    "value": "tashkent_region",
                    "title": "Tashkent region"
                  },
                  {
                    "id": 2,
                    "value": "tashkent_city",
                    "title": "Tashkent city"
                  }
                ]
              },
              {
                "id": 2,
                "label": "Samarkand",
                "value": "samarkand",
                "options": [
                  {
                    "id": 1,
                    "value": "samarkand_region",
                    "title": "Samarkand region"
                  },
                  {
                    "id": 2,
                    "value": "samarkand_city",
                    "title": "Samarkand city"
                  }
                ]
              }
            ]
          }
        ]
      },
      {
        "id": 4,
        "fields": [
          {
            "key": "gender",
            "type": "radio",
            "label": "Gender",
            "name": "gender",
            "options": [
              { "label": "Male", "value": "male" },
              { "label": "Female", "value": "female" }
            ],
            "layout": { "colSpan": 3 }
          },
          {
            "key": "accept_terms",
            "type": "checkbox",
            "label": "I accept the terms and conditions",
            "name": "accept_terms",
            "required": true,
            "layout": { "colSpan": 3 }
          }
        ]
      }
    ]
  }
}
